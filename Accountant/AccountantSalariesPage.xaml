<Page x:Class="KP.AccountantSalariesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Зарплаты сотрудников">

    <Grid Style="{StaticResource MainGridStyle}">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="Зарплаты сотрудников" 
                       Style="{StaticResource HeaderTextStyle}" 
                       Margin="0,0,0,20"/>

            <!-- ListView -->
            <ListView Name="SalariesListView" 
                      Height="250" Width="550" 
                      SelectionChanged="SalariesListView_SelectionChanged"
                      Style="{StaticResource ListViewStyle}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID" DisplayMemberBinding="{Binding EmployeeID}" Width="50"/>
                        <GridViewColumn Header="Фамилия" DisplayMemberBinding="{Binding LastName}" Width="100"/>
                        <GridViewColumn Header="Имя" DisplayMemberBinding="{Binding FirstName}" Width="100"/>
                        <GridViewColumn Header="Должность" DisplayMemberBinding="{Binding Position}" Width="100"/>
                        <GridViewColumn Header="Зарплата" DisplayMemberBinding="{Binding Salary}" Width="100"/>
                        <GridViewColumn Header="ID клуба" DisplayMemberBinding="{Binding ClubID}" Width="80"/>
                    </GridView>
                </ListView.View>
            </ListView>

            <!-- Поля для редактирования -->
            <StackPanel Orientation="Vertical" Margin="0,20,0,0">
                <TextBlock Text="Фамилия:" Style="{StaticResource LabelTextStyle}"/>
                <TextBox x:Name="LastNameBox" Width="200"/>

                <TextBlock Text="Имя:" Style="{StaticResource LabelTextStyle}"/>
                <TextBox x:Name="FirstNameBox" Width="200"/>

                <TextBlock Text="Должность:" Style="{StaticResource LabelTextStyle}"/>
                <TextBox x:Name="PositionBox" Width="200"/>

                <TextBlock Text="Зарплата:" Style="{StaticResource LabelTextStyle}"/>
                <TextBox x:Name="SalaryBox" Width="200"/>

                <TextBlock Text="ID клуба:" Style="{StaticResource LabelTextStyle}"/>
                <TextBox x:Name="ClubIDBox" Width="200"/>
            </StackPanel>

            <!-- Кнопки управления -->
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button Content="Добавить" Click="AddEmployee_Click" Style="{StaticResource ButtonStyle}" Width="120"/>
                <Button Content="Изменить" Click="EditEmployee_Click" Style="{StaticResource ButtonStyle}" Width="120"/>
                <Button Content="Удалить" Click="DeleteEmployee_Click" Style="{StaticResource ButtonStyle}" Width="120"/>
                <Button Content="Назад" Click="BackButton_Click" Style="{StaticResource ButtonStyle}" Width="120"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Page>
