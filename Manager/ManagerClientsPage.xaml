<Page x:Class="KP.ManagerClientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Управление клиентами"
      Background="{StaticResource BackgroundBrush}">

    <Grid>
        <StackPanel Margin="20">
            <!-- Поиск и заголовок -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Клиенты" Style="{StaticResource HeaderTextStyle}"/>
                <TextBox x:Name="SearchBox" Width="250" Margin="20,0,0,0" 
                         Style="{StaticResource TextBoxStyle}" Tag="Поиск..."/>
                <Button Content="Поиск" Click="SearchClient_Click" 
                        Style="{StaticResource ButtonStyle}" Margin="10,0,0,0"/>
            </StackPanel>

            <!-- Таблица клиентов -->
            <DataGrid x:Name="ClientsGrid" AutoGenerateColumns="False" Margin="0,20"
                      SelectionChanged="ClientsGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ClientID}" Width="50"/>
                    <DataGridTextColumn Header="Имя" Binding="{Binding FirstName}" Width="150"/>
                    <DataGridTextColumn Header="Фамилия" Binding="{Binding LastName}" Width="150"/>
                    <DataGridTextColumn Header="Телефон" Binding="{Binding PhoneNumber}" Width="150"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="200"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Форма редактирования -->
            <Border Style="{StaticResource AuthBorderStyle}" Margin="0,20">
                <StackPanel>
                    <TextBlock Text="Данные клиента" Style="{StaticResource BodyTextStyle}" FontWeight="Bold"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Margin="0,0,10,0">
                            <TextBlock Text="Имя:" Style="{StaticResource LabelTextStyle}"/>
                            <TextBox x:Name="FirstNameBox" Style="{StaticResource TextBoxStyle}"/>

                            <TextBlock Text="Фамилия:" Style="{StaticResource LabelTextStyle}" Margin="0,10,0,0"/>
                            <TextBox x:Name="LastNameBox" Style="{StaticResource TextBoxStyle}"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Телефон:" Style="{StaticResource LabelTextStyle}"/>
                            <TextBox x:Name="PhoneBox" Style="{StaticResource TextBoxStyle}"/>

                            <TextBlock Text="Email:" Style="{StaticResource LabelTextStyle}" Margin="0,10,0,0"/>
                            <TextBox x:Name="EmailBox" Style="{StaticResource TextBoxStyle}"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Кнопки управления -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20">
                <Button Content="Добавить" Click="AddClient_Click" Style="{StaticResource ButtonStyle}" Width="120"/>
                <Button Content="Обновить" Click="UpdateClient_Click" Style="{StaticResource ButtonStyle}" Width="120" Margin="10,0"/>
                <Button Content="Удалить" Click="DeleteClient_Click" Style="{StaticResource ButtonStyle}" Width="120" Margin="10,0"/>
                <Button Content="Назад" Click="BackButton_Click" Style="{StaticResource ButtonStyle}" Width="120"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>