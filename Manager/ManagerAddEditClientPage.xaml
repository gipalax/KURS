<Page x:Class="KP.ManagerAddEditClientPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ManagerAddEditClientPage">

    <Grid Background="{StaticResource BackgroundBrush}">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">

            <TextBlock Text="Информация о клиенте" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       Margin="0,0,0,20" 
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Имя:"/>
            <TextBox x:Name="FirstNameBox"/>

            <TextBlock Text="Фамилия:" Margin="0,10,0,0"/>
            <TextBox x:Name="LastNameBox"/>

            <TextBlock Text="Email:" Margin="0,10,0,0"/>
            <TextBox x:Name="EmailBox"/>

            <TextBlock Text="Телефон:" Margin="0,10,0,0"/>
            <TextBox x:Name="PhoneBox"/>

            <Button Content="Сохранить" 
                    Margin="0,20,0,0" 
                    Click="SaveButton_Click" 
                    Style="{StaticResource ButtonStyle}"/>

            <Button Content="Назад" 
                    Margin="0,10,0,0" 
                    Click="BackButton_Click" 
                    Style="{StaticResource ButtonStyle}"/>
        </StackPanel>
    </Grid>
</Page>
