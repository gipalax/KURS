<Page x:Class="KP.ManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ManagerPage"
      Background="{StaticResource BackgroundBrush}">

    <Grid Style="{StaticResource MainGridStyle}">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock Text="Страница менеджера"
                       Style="{StaticResource HeaderTextStyle}"
                       Margin="0,0,0,20" />

            <!-- Кнопка перехода к клиентам -->
            <Button Content="Клиенты"
                    Click="ClientsPage_Click"
                    Style="{StaticResource ButtonStyle}"
                    Margin="0,5" />

            
            <Button Content="Продажи абонементов"
                    Click="ManagerMembershipSalesPage_Click"
                    Style="{StaticResource ButtonStyle}"
                    Margin="0,5" />

            <Button Content="Запись на тренировки"
                    Click="TrainingsPage_Click"
                    Style="{StaticResource ButtonStyle}"
                    Margin="0,5" />

            <Button Content="Обратная связь / отзывы"
                    Click="FeedbackPage_Click"
                    Style="{StaticResource ButtonStyle}"
                    Margin="0,5" />
            

            <!-- Кнопка выхода -->
            <Button Content="Выйти"
                    Click="Exit_Click"
                    Style="{StaticResource ButtonStyle}"
                    Width="200"
                    Margin="0,20,0,0" />

        </StackPanel>
    </Grid>
</Page>
