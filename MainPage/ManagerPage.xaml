<Page x:Class="KP.ManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="ManagerPage"
      Background="{StaticResource BackgroundBrush}">

    <Grid Style="{StaticResource MainGridStyle}">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Страница менеджера" Style="{StaticResource HeaderTextStyle}"/>

            <!-- Кнопки навигации -->
            <Button Content="Клиенты" Click="Clients_Click" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Продажи абонементов" Click="Sales_Click" Style="{StaticResource ButtonStyle}"/>
            <!--<Button Content="Расписание тренировок" Click="Schedule_Click" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Отчёты" Click="Reports_Click" Style="{StaticResource ButtonStyle}"/>-->

            <!-- Кнопка выхода -->
            <Button Content="Выйти" Click="BackToAuth_Click" 
                    Style="{StaticResource ButtonStyle}" Width="200" Margin="0,20"/>
        </StackPanel>
    </Grid>
</Page>