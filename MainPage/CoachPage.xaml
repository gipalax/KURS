<Page x:Class="KP.CoachPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Title="CoachPage">

    <Grid Style="{StaticResource MainGridStyle}">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Страница тренера" Style="{StaticResource HeaderTextStyle}"/>

            <Button Content="Клиенты" Click="Clients_Click" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Услуги клуба" Click="ClubServices_Click" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Запись на услуги" Click="ServiceRegistrations_Click" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Запись тренировок" Click="TrainingsPage_Click" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Отзывы клиентов" Click="ClientReviews_Click" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Типы тренировок" Click="TrainingTypes_Click" Style="{StaticResource ButtonStyle}"/>

            <Button Content="Выйти" Click="BackToAuthButton_Click" Style="{StaticResource ButtonStyle}" Width="200" Margin="20,20,0,0"/>
        </StackPanel>
    </Grid>
</Page>
