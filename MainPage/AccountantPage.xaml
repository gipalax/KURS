<Page x:Class="KP.AccountantPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Title="AccountantPage">

    <Grid Style="{StaticResource MainGridStyle}">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Страница бухгалтера" Style="{StaticResource HeaderTextStyle}"/>

            <Button Content="Продажи абонементов" Click="MembershipSales_Click" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Оказанные услуги" Click="ProvidedServices_Click" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Зарплаты сотрудников" Click="Salaries_Click" Style="{StaticResource ButtonStyle}"/>
            <Button Content="Финансовые отчеты" Click="FinancialReports_Click" Style="{StaticResource ButtonStyle}"/>

            <Button Content="Выйти" Click="BackToAuthButton_Click" Style="{StaticResource ButtonStyle}" Width="200" Margin="20,20,0,0"/>
        </StackPanel>
    </Grid>
</Page>
