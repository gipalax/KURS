<Page x:Class="KP.AutharizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KP"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutharizationPage">

    <Grid Style="{StaticResource MainGridStyle}">
        <Border Style="{StaticResource AuthBorderStyle}" Width="350">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="Боксерский клуб" Style="{StaticResource HeaderTextStyle}"/>
                <TextBlock Text="Логин:" Style="{StaticResource LabelTextStyle}"/>
                <TextBox x:Name="loginTextBox" Style="{StaticResource TextBoxStyle}"/>
                <TextBlock Text="Пароль:" Style="{StaticResource LabelTextStyle}"/>
                <PasswordBox x:Name="passwordText" Style="{StaticResource PasswordBoxStyle}"/>
                <Button Content="Войти" Click="signInButton_Click" Style="{StaticResource ButtonStyle}" Width="200" Margin="0,20,0,10"/>
                <Button Content="Зарегистрироваться" Click="signUpButton_Click" Style="{StaticResource ButtonStyle}" Width="200"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>